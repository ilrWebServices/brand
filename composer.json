{
    "name": "ilr-web-services/brand",
    "description": "Composer template for ILR's Brand site",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Aaron Froehlich",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/adminimal_admin_toolbar": "^1.7",
        "drupal/block_visibility_groups": "^1.3",
        "drupal/components": "^2.0",
        "drupal/config_split": "^1.4",
        "drupal/console": "^1.0.2",
        "drupal/core-composer-scaffold": "^9.0.0",
        "drupal/core-recommended": "^9.0.0",
        "drupal/crop": "2.x-dev",
        "drupal/ctools": "^3.0",
        "drupal/dropzonejs_eb_widget": "2.x-dev",
        "drupal/entity_browser": "2.x-dev",
        "drupal/field_group": "^3.0",
        "drupal/focal_point": "^1.0@beta",
        "drupal/google_analytics": "^3.0",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/linkit": "^5.0",
        "drupal/media_entity_download": "^2.0@beta",
        "drupal/paragraphs": "^1.9",
        "drupal/pathauto": "^1.6",
        "drupal/samlauth": "^3.0",
        "drupal/simplify_menu": "^2.0",
        "drupal/twig_field_value": "^2.0",
        "drupal/twig_tweak": "^2.4",
        "drupal/unified_twig_ext": "^1.0",
        "drush/drush": "^10.6",
        "enyo/dropzone": "^5.1",
        "platformsh/config-reader": "^2.3",
        "vlucas/phpdotenv": "^4.0",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/core-dev": "^9.0.0",
        "drupal/devel": "^4.1",
        "drupal/entity_clone": "^1.0@beta",
        "drupal/stage_file_proxy": "^1.0@RC"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "sync-prod": "drush sql:drop && drush sql:sync @ilrbrand.master @self",
        "sync-dev": "drush sql:drop && drush sql:sync @ilrbrand.develop @self",
        "sync-update": "drush updatedb --no-post-updates && drush config:import && drush updatedb"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library", "enyo/dropzone"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/modules/custom/{$name}": ["type:drupal-custom-module"],
            "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        }
    }
}
