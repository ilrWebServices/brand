{% set modifiers = modifiers|default('visual') %}
<div class="slide{% for modifier in modifiers %} slide--{{ modifier }}{% endfor %}">
  <div class="slide__intro">
    <h2 class="slide-intro__heading">{{ intro_heading }}</h2>
    <div class="slide-intro__text">
      {{ intro_text|raw }}
    </div>
  </div><!-- /.slide-intro-->

  {% if asymmetrical %}
    <div class="slide__content slide__content--{{ columns }}col{% if asymmetrical %} slide__content--asym slide__content--asym-{{ asymmetrical }}{% endif %}">

      {% for slide in slides %}

        {% if loop.index == 1 %}
          <div class="slide-content__wrapper slide-content__wrapper--first">
            <div class="slide-content__col">
              {{ slide }}
            </div>
          </div>

        {% else %}
          {% if loop.index == 2 %}
            <div class="slide-content__wrapper slide-content__wrapper--last">
          {% endif %}

          <div class="slide-content__col">{{ slide|raw }}</div>
        {% endif %}
      {% endfor %}
      {% if slides|length > 1 %}
        </div><!-- /.slide-content__wrapper--last -->
      {% endif %}
    </div><!-- /.slide-content-->
  {% else %}
    <div class="slide__content slide__content--sym slide__content--{{ columns }}col">
      {% for slide in slides %}
        <div class="slide-content__col">
          {{ slide|raw }}
        </div>
      {% endfor %}
    </div><!-- /.slide-content-->
  {% endif %}
</div><!-- /.slide--visual -->
